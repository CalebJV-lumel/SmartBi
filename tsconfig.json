{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@plugin/*": ["src/plugin/*"],
      "@app/*": ["src/app/*"],
      "@shared/*": ["src/shared/*"]
    },
    "types": ["@figma/plugin-typings", "node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
